<% include ../partials/header %>
<% include ../partials/header2 %>
<div class="container">
	<div class="row">
		<div class="col-md-4 col-sm-12 col-xs-12 "></div>
		<div class="col-md-4 col-sm-12 col-xs-12 ">
			<p><a href="/allocator/allocations/allocationshow/<%= allocatorinfo._id %>"><%= allocatorinfo.time.toDateString() %> (Currently no middles or nights)</a></p>
			<form action="/allocator/<%= allocatorinfo.id %>/runnershow" method="POST" id="positionForm">
				<div class="form-group">
					<label>Add Runner</label>
					<select class="form-control" name="runner">
						<% foundColleague.forEach(function(colleague){ %>
						<% if (colleague.isIn == true && colleague.roles[0].tip == true && colleague.isAllocated == false) { %>
						<option  value="<%= colleague.fullName %>"><%= colleague.fullName %></option>
						<% } else { %>
						<p>There are no more runners avaiable for <%= allocatorinfo.time.toDateString() %></p>
						<% } %>
						<% }); %>
					</select>
					<hr>
					<button class="btn btn-danger btn-block blackgold ">Add Runner</button>
				</div>
			</form>
			<table class="table-responsive">
				<thead>
					<tr><th>Runners:</th></tr>
				</thead>
				<tbody>
					<% var checkNum = 1; %>
					<% foundColleague.forEach(function(foundColleague){ %>
					<% foundRunner.forEach(function(foundRunner){ %>
					<% if (foundRunner.author.id.equals(allocatorinfo.id) && foundRunner.colleagueId === foundColleague.id) { %>
					<% checkNum++ %>
					<tr><td><a href="/colleagues/<%= foundColleague.id %>" title=""><%= foundColleague.fullName %></a></td><td><form action="/allocator/<%= allocatorinfo.id  %>/runnershow/<%= foundRunner.id %>?_method=DELETE" method="POST"><button class="btn btn-primary btn-sm blackgold">Remove</button></form></td></tr>
					<% } %>
					<% }); %>
					<% }); %>
					<% if (checkNum < 2) { -%>
					<tr><td>No Runner assigned</td></tr>
					<% } %>
				</tbody>
			</table>
		</div>
		<!-- <div class="col-sm6 col-md-4 col-md-offset-4 col-sm-offset-3">
		</div> -->
		<div class="col-md-4 col-sm-12 col-xs-12 "></div>
	</div>
</div>
<% include ../partials/footer %>