<% include ../partials/header %>
<% include ../partials/header2 %>
<div class="container">
    <h4 class="">Shift set up 1st Step (Type in the shift targets)</h4>
    <hr class="style-four">
    <h1>TARGETS</h1>
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <form action="/allocator" method="POST">
                <div class="form-group">
                    <button class="btn btn-danger btn-block blackgold ">Create Blank Job Sheet</button>
                    <br>
                    <!-- <a class="btn btn-warning btn-block goldblack" href="/">Back</a> -->
                </div>
                <div class="form-group">
                    <label>Shift Date</label>
                    <input class="form-control myinput" type="date" name="allocator[time]" placeholder="Shift Date">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="allocator[pickTarget]" placeholder="Pick Target">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="allocator[tipTarget]" placeholder="Tipping">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="allocator[loadTarget]" placeholder="Loads">
                </div>
                <hr>
                <div class="form-group">
                    <label>Recoup Colleague</label>
                    <input class="form-control check" style="width: 5%; margin: 0;" type="checkbox" name="allocator[rebadge]">
                </div>
                <hr>
                <div class="form-group">
                    <input class="form-control" type="text" name="allocator[outage]" placeholder="Outage (Type 'true' or 'false')">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="allocator[outageTime]" placeholder="Time of outage">
                </div>
            </form>
        </div>
    </div>
</div>
<% include ../partials/footer %>